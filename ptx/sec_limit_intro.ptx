              <cell></cell>
              <cell></cell>
            </row>
            <row>
              <cell>0.9</cell>
              <cell>2.01</cell>
            </row>
            <row>
              <cell>0.99</cell>
              <cell>2.0001</cell>
            </row>
            <row>
              <cell>0.999</cell>
              <cell>2.000001</cell>
            </row>
            <row>
              <cell>1.001</cell>
              <cell>1.001</cell>
            </row>
